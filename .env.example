# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@ecommerce.com

# SMS Configuration (mocked)
SMS_API_KEY=mock_sms_api_key
SMS_SENDER=ECommerce

# Payment Configuration (mocked)
PAYMENT_API_KEY=mock_payment_api_key
PAYMENT_WEBHOOK_SECRET=mock_webhook_secret

# External Services
SEARCH_SERVICE_URL=http://localhost:9200
ANALYTICS_SERVICE_URL=http://localhost:3005

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
